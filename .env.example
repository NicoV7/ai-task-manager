# Environment Configuration Example
# Copy this file to .env and update with your actual values

# Database Configuration
DB_NAME=taskmanager
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=db
DB_PORT=5432

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_PORT=6379

# Django Configuration
DEBUG=True
SECRET_KEY=your-secret-key-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,backend
CORS_ALLOWED_ORIGINS=http://localhost:3000

# AI Provider API Keys (optional - can be configured per user in the app)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# Encryption key for API keys in database (generate a new one for production)
FIELD_ENCRYPTION_KEY=your_32_byte_base64_encoded_key_here

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000

# Development Ports
BACKEND_PORT=8000
FRONTEND_PORT=3000

# Email Configuration (optional)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Logging
LOG_LEVEL=DEBUG

# Production Settings (set these for production deployment)
PRODUCTION=False
DOMAIN=localhost
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Performance (production only)
GUNICORN_WORKERS=2
GUNICORN_CONNECTIONS=500