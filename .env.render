# Render Production Environment Variables Template
# Copy these to your Render service environment variables

# Django Configuration
DJANGO_SETTINGS_MODULE=taskmanager.settings.production
DEBUG=False
SECRET_KEY=your-secret-key-will-be-generated-by-render

# Database (automatically provided by Render PostgreSQL)
DATABASE_URL=postgresql://username:password@host:port/dbname

# Redis (automatically provided by Render Redis)
REDIS_URL=redis://host:port

# Security Settings
ALLOWED_HOSTS=your-backend-service.onrender.com,localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=https://your-frontend-service.onrender.com,http://localhost:3000
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Application Settings
GUNICORN_WORKERS=2
GUNICORN_CONNECTIONS=1000
LOG_LEVEL=INFO

# Frontend Environment Variables (for static site)
REACT_APP_API_URL=https://your-backend-service.onrender.com
REACT_APP_WS_URL=wss://your-backend-service.onrender.com
GENERATE_SOURCEMAP=false

# AI Service (required)
CLAUDE_API_KEY=your-claude-api-key-here

# Email Configuration (optional)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Health Check Configuration
HEALTH_CHECK_ACCESS_TOKEN=your-health-check-token

# Cache Configuration
CACHE_TTL=300

# File Upload Settings
MAX_UPLOAD_SIZE=10485760